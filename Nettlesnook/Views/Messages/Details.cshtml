@model Nettlesnook.Models.Messages

@{
    ViewData["Title"] = "Details";
    ViewData["Description"] = "Full view of a message left at Nettlesnook Farm.";
    int ID = Model.ID;
}

<main class="content">
    <h2>Details</h2>
    <div class="content-left">
        <h4>Messages</h4>
        <hr />
        <dl class="dl-horizontal">
            <dt>
                @Html.DisplayNameFor(model => model.Name)
            </dt>
            <dd>
                @Html.DisplayFor(model => model.Name)
            </dd>
            <dt>
                @Html.DisplayNameFor(model => model.Email)
            </dt>
            <dd>
                @Html.DisplayFor(model => model.Email)
            </dd>
            <dt>
                @Html.DisplayNameFor(model => model.Body)
            </dt>
            <dd>
                @Html.DisplayFor(model => model.Body)
            </dd>
        </dl>
    </div>
    <div>
        <a asp-controller="Messages" asp-action="Delete" asp-route-id=@ID>Delete</a> |
        <a asp-controller="Account" asp-action="Dashboard">Back to Dashboard</a>
    </div>
</main>
@model Nettlesnook.Models.Blog

@{
    ViewData["Title"] = "Edit";
}

<h2>Edit</h2>

<h4>Blog</h4>
<hr />
<div class="row">
    <div>
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="ID" />
            <div class="form-group">
                <label asp-for="DateTime" class="control-label"></label>
                <input asp-for="DateTime" class="form-control" />
                <span asp-validation-for="DateTime" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Title" class="control-label"></label>
                <input asp-for="Title" class="form-control" required />
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Body" class="control-label"></label>
                <textarea asp-for="Body" class="form-control" rows="6" required></textarea>
                <span asp-validation-for="Body" class="text-danger"></span>
            </div>
            <div class="form-group">
                <div class="checkbox">
                    <label>
                        <input asp-for="Archive" /> @Html.DisplayNameFor(model => model.Archive)
                    </label>
                </div>
            </div>
            @foreach (BlogImages i in Model.Images)
            {
                <div class="form-group">
                    <label asp-for="Images" class="control-label">@Html.DisplayFor(model => i.ID)</label>
                    <input asp-for="Images" class="form-control" type="text" name="@Html.DisplayNameFor(model => i.ImageFileName)" value="@Html.DisplayFor(model => i.ImageFileName)" />
                    <p>@Html.DisplayFor(model => i.ImageFileName)</p>
                    <input asp-for="Images" class="form-control" type="text" name="@Html.DisplayNameFor(model => i.ImageDesc)" value="@Html.DisplayFor(model => i.ImageDesc)" />
                </div>

            }
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-controller="Account" asp-action="Dashboard">Back to Dashboard</a>
</div>

